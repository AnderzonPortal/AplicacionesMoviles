<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo con gradiente sutil -->
    <gradient
        android:angle="135"
        android:startColor="#F8F9FA"
        android:centerColor="#F1F3F4"
        android:endColor="#E8EAED"
        android:type="linear" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" />

    <!-- Padding interno -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>