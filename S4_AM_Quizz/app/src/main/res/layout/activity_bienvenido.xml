<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_cuestionario"
    android:padding="16dp">

    <!-- Contador circular rojo arriba derecha -->
    <TextView
        android:id="@+id/txtContador"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circular_background_rojo"
        android:text="30"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card pregunta -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPregunta"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtContador"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C9F2E9"
            android:padding="20dp"
            android:gravity="center"
            android:text="AquÃ­ va la pregunta"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <!-- Alternativas -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardRespuesta1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardPregunta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtRespuesta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E3ED"
            android:padding="20dp"
            android:gravity="center"
            android:text="Respuesta 1"
            android:textSize="18sp"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRespuesta2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardRespuesta1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtRespuesta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E3ED"
            android:padding="20dp"
            android:gravity="center"
            android:text="Respuesta 2"
            android:textSize="18sp"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRespuesta3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardRespuesta2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtRespuesta3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E3ED"
            android:padding="20dp"
            android:gravity="center"
            android:text="Respuesta 3"
            android:textSize="18sp"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardRespuesta4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardRespuesta3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txtRespuesta4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E3ED"
            android:padding="20dp"
            android:gravity="center"
            android:text="Respuesta 4"
            android:textSize="18sp"
            android:textColor="#000000" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
