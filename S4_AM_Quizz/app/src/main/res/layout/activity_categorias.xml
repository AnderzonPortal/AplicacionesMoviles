<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_morado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- TARJETA DE SALUDO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_saludo"
            android:orientation="horizontal"
            android:padding="16dp"
            android:elevation="6dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtSaludo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BUENOS DÍAS"
                    android:textColor="#D10037"
                    android:textStyle="bold"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anderzon Portal"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/usuario"
                android:scaleType="centerCrop"
                android:background="@drawable/circular_background"
                android:clipToOutline="true"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- TARJETA 1: Aplicaciones Móviles -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_aplicaciones"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgFondo1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_naranja"
                    android:contentDescription="Fondo Aplicaciones Móviles"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#66FFFFFF">

                    <TextView
                        android:id="@+id/txtTituloCurso1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUIZ BÁSICO"
                        android:textColor="#D10037"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_headphones"
                            android:contentDescription="Icono de audífonos"
                            app:tint="#FF5722" />

                        <TextView
                            android:id="@+id/txtNombreCurso1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APLICACIONES MOVILES"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <!-- TARJETA 2: Algoritmos Evolutivos -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_algoritmos"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:layout_gravity="center"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgFondo2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_morado"
                    android:contentDescription="Fondo Algoritmos Evolutivos"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#66FFFFFF">

                    <TextView
                        android:id="@+id/txtTituloCurso2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUIZ BÁSICO"
                        android:textColor="#D10037"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_headphones"
                            android:contentDescription="Icono de audífonos"
                            app:tint="#7F2FDB" />

                        <TextView
                            android:id="@+id/txtNombreCurso2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ALGORITMOS EVOLUTIVOS"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- TARJETA 3: Gobierno de TI -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_gobierno"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:layout_gravity="center"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgFondo3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_azul"
                    android:contentDescription="Fondo Gobierno de TI"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#66FFFFFF">

                    <TextView
                        android:id="@+id/txtTituloCurso3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUIZ BÁSICO"
                        android:textColor="#D10037"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_headphones"
                            android:contentDescription="Icono de audífonos"
                            app:tint="#3F51B5" />

                        <TextView
                            android:id="@+id/txtNombreCurso3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GESTION DE GOBIERNO TI"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- TARJETA 4: Robótica -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_robotica"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:layout_gravity="center"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgFondo4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_amarillo"
                    android:contentDescription="Fondo Robótica"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#66FFFFFF">

                    <TextView
                        android:id="@+id/txtTituloCurso4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUIZ BÁSICO"
                        android:textColor="#D10037"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_headphones"
                            android:contentDescription="Icono de audífonos"
                            app:tint="#C5BE58" />

                        <TextView
                            android:id="@+id/txtNombreCurso4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ROBOTICA"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- TARJETA 5: Seguridad Informática -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_seguridad"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:layout_gravity="center"
            xmlns:card_view="http://schemas.android.com/apk/res-auto">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgFondo5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_rosado"
                    android:contentDescription="Fondo Seguridad Informática"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#66FFFFFF">

                    <TextView
                        android:id="@+id/txtTituloCurso5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUIZ BÁSICO"
                        android:textColor="#D10037"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_headphones"
                            android:contentDescription="Icono de audífonos"
                            app:tint="#C73F9C" />

                        <TextView
                            android:id="@+id/txtNombreCurso5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SEGURIDAD INFORMATICA"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- TARJETA 6: Tesis I -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_tesis"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_gravity="center">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgFondo6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_verde"
                    android:contentDescription="Fondo Tesis I"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#66FFFFFF">

                    <TextView
                        android:id="@+id/txtTituloCurso6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QUIZ BÁSICO"
                        android:textColor="#D10037"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:contentDescription="Icono de audífonos"
                            android:src="@drawable/ic_headphones"
                            app:tint="#084909" />

                        <TextView
                            android:id="@+id/txtNombreCurso6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TESIS I"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
